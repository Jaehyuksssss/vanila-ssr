{
  "name": "vanila-components",
  "version": "0.3.4",
  "description": "SSR-first admin UI toolkit for vanilla JavaScript with server-rendered markup and client hydration.",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "dist/vanila-components.cjs",
  "module": "dist/vanila-components.js",
  "unpkg": "dist/vanila-components.umd.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/vanila-components.js",
      "require": "./dist/vanila-components.cjs",
      "default": "./dist/vanila-components.js"
    },
    "./package.json": "./package.json",
    "./utilities": {
      "types": "./dist/types/lib/utilities/index.d.ts",
      "import": "./dist/vanila-components.js",
      "require": "./dist/vanila-components.cjs",
      "default": "./dist/vanila-components.js"
    },
    "./theme": {
      "types": "./dist/types/lib/theme/index.d.ts",
      "import": "./dist/vanila-components.js",
      "require": "./dist/vanila-components.cjs",
      "default": "./dist/vanila-components.js"
    },
    "./styles.css": "./dist/vanila-components.css"
  },
  "sideEffects": [
    "./dist/vanila-components.css"
  ],
  "browser": {
    "./dist/vanila-components.cjs": "./dist/vanila-components.js"
  },
  "scripts": {
    "clean": "node -e \"require('fs').rmSync('dist', { recursive: true, force: true })\"",
    "dev": "vite",
    "build:types": "tsc --project tsconfig.build.json",
    "build": "npm run clean && vite build && npm run build:types",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "docs:dev": "npm --prefix docs run dev",
    "docs:build": "npm --prefix docs run build"
  },
  "keywords": [
    "ssr",
    "server-side-rendering",
    "hydration",
    "vanilla-js",
    "vanilla-javascript",
    "ui-toolkit",
    "ui-components",
    "component-library",
    "admin-ui",
    "admin-dashboard",
    "design-system",
    "accessibility",
    "modal",
    "accordion",
    "toast",
    "bottomsheet",
    "data-table",
    "UI-library",
    "UI-components",
    "UI-framework",
    "UI-design-system",
    "UI-design-library",
    "UI-design-toolkit",
    "UI-design-framework"
  ],
  "author": "jh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jaehyuksssss/vanila-components.git"
  },
  "bugs": {
    "url": "https://github.com/jaehyuksssss/vanila-components/issues"
  },
  "homepage": "https://docs-vanila-component.vercel.app/",
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "glob": "^11.0.3",
    "jsdom": "^27.0.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^3.2.4"
  }
}
