{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist/types",
    "rootDir": "./src",
    "stripInternal": true,
    "noEmit": false
  },
  "include": [
    "src/**/*.ts",
    "src/vite-env.d.ts"
  ],
  "exclude": [
    "src/demo/**/*",
    "**/__tests__/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
